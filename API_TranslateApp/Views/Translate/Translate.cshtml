@model API_TranslateApp.Models.TranslateModel
@{
    ViewData["Title"] = "Translate Using Google Translate API";
    AllLanguages language = new AllLanguages();
    CountryCodes countryCodes = new CountryCodes();
    //List<string> response = await language.GetResponse();
    string[] countries = { "pl", "en",
                        "ru" };
    List<string> response = new List<string>(); ;
    response.AddRange(countries);
}
<h1>@ViewData["Title"]</h1>
@using (Html.BeginForm("GetTranslation", "Translate", FormMethod.Post))
{
    <div class="translate-container">
        <div class="translate text-center">
            <select name="source" id="dowList" class="dowList">
                <option value="" selected disabled hidden>@Html.DisplayFor(model => model.source)</option>
                @foreach (var item in response)
                {
                    string fullName = countryCodes.GetFullCountryName(item);
                    <option value="@item">@item - @fullName</option>
                }
            </select>
            @using (Html.BeginForm("GetTranslation", "Translate", FormMethod.Post))
            {
                @Html.TextAreaFor(model => model.text, new { Class = "textbox" })
                <button type="submit" class="btn-translate">Translate!</button>
            }
            </div>
        <div class="translate">
            <select name="result" id="dowList" class="dowList">
                <option value="" selected disabled hidden>@Html.DisplayFor(model => model.result)</option>
                @foreach (var item in response)
                {
                    string fullName = countryCodes.GetFullCountryName(item);
                    <option value="@item">@item - @fullName</option>
                }
            </select>
            @using (Html.BeginForm("GetTranslation", "Translate", FormMethod.Post))
            {
                @Html.TextAreaFor(model => model.response, new { Class = "textbox" })
            }
            </div>
    </div>
}